{
  "rangeStrategy": "pin",
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "automergeStrategy": "squash-commit",
  "lockFileMaintenance": {
    "enabled": false
  },
  "_comment": "create new branch: rix-ops/chore/dependency-updates",
  "baseBranches": ["main"],
  "packageRules": [
    {
       "groupName": "all dependencies",
       "groupSlug": "all",
       "matchPackagePatterns": [
         "*"
       ],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}

